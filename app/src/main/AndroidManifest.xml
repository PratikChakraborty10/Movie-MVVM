<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.pratikchakraborty.moviemvvm">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_movie_mania_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.MovieMVVM"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDetails">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.series.SeriesActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDetails"/>
        <activity
            android:name=".ui.single_movie_details.SingleMovie"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDetails" />
        <activity
            android:name=".ui.popular_movie.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.MovieDetails">

        </activity>
    </application>

</manifest>